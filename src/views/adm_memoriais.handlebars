          <a href="/detalhes-memoriais?id={{id}}"><button>Detalhes&nbsp<i class='fa fa-folder-open' style='font-size:14px;color:branco' ></i></button></a>
          <a href="/editar-memoriais?id={{id}}"><button>Editar&nbsp<i class='fas fa-edit' style='font-size:14px;color:branco'></i></button></a>
          </div>
     </div>     
</div>          
          
              
        
      
       
     
     
   

    
     
     





     

          
    
    

