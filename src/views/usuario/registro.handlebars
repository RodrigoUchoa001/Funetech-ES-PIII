                <input type="password" name="senha" placeholder="Insria a senha" class="form-control campo-login" required>
            <label for="senha2">Repita seua senha: </label>
                <input type="password" name="senha2" class="form-control campo-login" required>
                <br>
            <button type="submit" class="btn btn-sucess mt-4">Cadastrar</button>
        </form>
    </div>
</div>